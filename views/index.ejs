<%- include ('header.ejs'); -%>


    <!-- Event List (table view) --------------------------------------------------- -->
            <div class="table-wrapper">
                <h1>EVENT LIST</h1>
                <% if (event.length > 0) {%>
                    <table class="tableEvent">
                        <thead class="thead">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Event Name</th>
                                <th scope="col">Address</th>
                                <th></th>
                                
                            </tr>
                        </thead>  
        
                        <tbody>
                            <% event.forEach((eventy, index ) => { %> 
                                <tr>
                                    <th scope="row"> <%=eventy.idEvent %></th>
                                    <td> <%= eventy.nameEvent%> </td>
                                    <td> <%= eventy.address%> </td>
                                    <td>
                                        <a href="/editEvent/<%= eventy.idEvent %>" target="_blank" rel="noopener" >Edit</a>
                                        <a href="/deleteEvent/<%= eventy.idEvent %>" >Delete</a>        
                                    </td>
                                    <td> 
                                        <a href="/detailEvent/<%= eventy.idEvent %>" target="_blank" rel="noopener" >Detail</a>
                                    </td>
                                </tr>
                            <% }) %> 
                        </tbody>
                    </table>
                    <% } else { %>
                        <p class="text-center">No events found. Go <a href="/addEvent" >here</a> to add events.</p>
                    <% } %>
            </div>
        </br>
    </br>

   

</body>
</html>