<%- include ('header.ejs'); -%>


    <!-- Event List (table view) --------------------------------------------------- -->
            <div class="table-wrapper">
                <h1>VOLUNTEER LIST</h1>
                <% if (volunteer.length > 0) {%>
                    <table class="tableEvent">
                        <thead class="thead">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th></th>
                                
                            </tr>
                        </thead>  
        
                        <tbody>
                            <% volunteer.forEach((vol, index ) => { %> 
                                <tr>
                                    <th scope="row"> <%= vol.idVol %></th>
                                    <td> <%= vol.firstName%> </td>
                                    <td> <%= vol.lastName%> </td>
                                    <td>
                                        <a href="/editVolunteer/<%= vol.idVol %>" target="_blank" rel="noopener" >Edit</a>
                                        <a href="/deleteVolunteer/<%= vol.idVol %>" >Delete</a>        
                                    </td>
                                    <td> 
                                        <a href="/detailVol/<%= vol.idVol %>" target="_blank" rel="noopener" >Detail</a>
                                    </td>
                                </tr>
                            <% }) %> 
                        </tbody>
                    </table>
                    <% } else { %>
                        <p class="text-center">No volunteer found. Go <a href="/addVolunteer" >here</a> to add volunteers.</p>
                    <% } %>
            </div>
        </br>
    </br>

   

</body>
</html>